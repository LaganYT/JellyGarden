[Unit]
Description=TV Garden Daily Channel Extraction
After=network.target
Wants=network.target

[Service]
Type=oneshot
User=root
Group=root
WorkingDirectory=/opt/tv-garden
ExecStart=/opt/tv-garden/daily_tv_garden.sh extract
StandardOutput=journal
StandardError=journal

# Security settings
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths=/var/log/tv-garden /var/www/tv-garden /run /tmp
